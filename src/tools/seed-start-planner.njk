<script>
  // ---- Data model ----
  // indoorStartWeeks: [startEarlierWeeks, startLaterWeeks] relative to last frost (before last frost)
  // transplantWeeks:  [earlierWeeks, laterWeeks] relative to last frost (after subtracting protection offset)
  // directSowWeeks:   [earlierWeeks, laterWeeks] relative to last frost (can be negative = before frost date)
  // CROPS come from site data (src/_data/crops.json) plus a few extras that
// you may not have crop pages for yet (e.g., cucumbers).
// This keeps tool + crop pages in sync for shared crops.
const SITE_CROPS = {{ crops | dump | safe }};

function normalizeCropForTool(c) {
  // Tool expects:
  // - indoorStartWeeks: [earlierWeeks, laterWeeks] (weeks BEFORE last frost)
  // - transplantWeeks/directSowWeeks: [earlierWeeks, laterWeeks] (weeks RELATIVE to last frost; negatives allowed)
  // Your crop data uses a simpler convention for "before last frost" ranges.
  const out = {
    id: c.slug || c.id,
    name: c.name,
    indoorStartWeeks: c.indoorStartWeeks ?? null,
    transplantWeeks: null,
    directSowWeeks: null,
    notes: c.description || ""
  };

  // Transplant: interpret crop data as a range that may include "before last frost" for cool crops.
  // - cool crops: [beforeWeeks, afterWeeks] (both positive) -> [-beforeWeeks, afterWeeks]
  // - warm crops: [afterMax, afterMin] or [afterMax, afterMin] -> sort ascending -> [min, max]
  if (Array.isArray(c.transplantWeeks) && c.transplantWeeks.length === 2) {
    const a = Number(c.transplantWeeks[0]);
    const b = Number(c.transplantWeeks[1]);

    if (c.seasonType === "cool") {
      const before = Math.max(a, b);
      const after = Math.min(a, b);
      out.transplantWeeks = [-before, after]; // allows early transplanting before last frost when conditions permit
    } else {
      const minAfter = Math.min(a, b);
      const maxAfter = Math.max(a, b);
      out.transplantWeeks = [minAfter, maxAfter];
    }
  }

  // Direct sow: usually a "before last frost" range in your crop data.
  // Convert [beforeStart, beforeEnd] -> [-beforeStart, -beforeEnd] (e.g., [6,2] -> [-6,-2])
  if (Array.isArray(c.directSowWeeks) && c.directSowWeeks.length === 2) {
    const a = Number(c.directSowWeeks[0]);
    const b = Number(c.directSowWeeks[1]);

    if (c.seasonType === "cool") {
      const startBefore = Math.max(a, b);
      const endBefore = Math.min(a, b);
      out.directSowWeeks = [-startBefore, -endBefore];
    } else {
      // warm crops: treat as after-last-frost window if you ever set it (rare).
      const minRel = Math.min(a, b);
      const maxRel = Math.max(a, b);
      out.directSowWeeks = [minRel, maxRel];
    }
  }

  return out;
}

const CROPS = SITE_CROPS.map(normalizeCropForTool);



  // ---- Helpers ----
  const byId = (id) => document.getElementById(id);

// ---- Shareable state (query params) ----
// URL params:
//   frost=YYYY-MM-DD
//   crop=<crop id>
//   prot=<protection days>
function readParamsIntoUI() {
  const params = new URLSearchParams(window.location.search);

  const frost = params.get("frost");
  const crop = params.get("crop");
  const prot = params.get("prot");

  if (frost) byId("lastFrost").value = frost;
  if (prot) byId("protection").value = prot;
  // crop select is populated later, so we store it on the element for init.
  if (crop) byId("crop").dataset.preselect = crop;
}

function updateURLFromUI() {
  const frost = byId("lastFrost").value;
  const crop = byId("crop").value;
  const prot = byId("protection").value;

  const url = new URL(window.location.href);
  if (frost) url.searchParams.set("frost", frost); else url.searchParams.delete("frost");
  if (crop) url.searchParams.set("crop", crop); else url.searchParams.delete("crop");
  if (prot && prot !== "0") url.searchParams.set("prot", prot); else url.searchParams.delete("prot");

  window.history.replaceState({}, "", url);
}

async function copyShareLink() {
  try {
    await navigator.clipboard.writeText(window.location.href);
    byId("copyLinkBtn").textContent = "Copied!";
    setTimeout(() => (byId("copyLinkBtn").textContent = "Copy link"), 1200);
  } catch (e) {
    // Fallback: prompt
    window.prompt("Copy this link:", window.location.href);
  }
}

  function toDate(inputValue) {
    if (!inputValue) return null;
    const [y, m, d] = inputValue.split("-").map(Number);
    return new Date(y, m - 1, d, 12, 0, 0, 0); // local noon to reduce DST weirdness
  }

  function fmt(date) {
    return date.toLocaleDateString(undefined, { year: "numeric", month: "short", day: "numeric" });
  }

  function addDays(date, days) {
    const out = new Date(date);
    out.setDate(out.getDate() + days);
    return out;
  }

  function weeksToDays(weeks) { return Math.round(weeks * 7); }

  function windowFromWeeks(anchorDate, earlierWeeks, laterWeeks, protectionDays) {
    const start = addDays(anchorDate, -weeksToDays(earlierWeeks));
    const end   = addDays(anchorDate, -weeksToDays(laterWeeks));
    return [start, end].map(d => addDays(d, -protectionDays));
  }

  function windowFromWeeksRelative(anchorDate, earlierWeeks, laterWeeks, protectionDays) {
    const start = addDays(anchorDate, weeksToDays(earlierWeeks));
    const end   = addDays(anchorDate, weeksToDays(laterWeeks));
    return [start, end].map(d => addDays(d, -protectionDays));
  }

  function addRow(task, windowText, notes) {
    const tr = document.createElement("tr");
    tr.innerHTML = `
      <td><strong>${task}</strong></td>
      <td>${windowText}</td>
      <td class="muted">${notes || ""}</td>
    `;
    byId("resultsBody").appendChild(tr);
  }

  readParamsIntoUI();

  // ---- Init UI ----
  function initCropSelect() {
    const sel = byId("crop");
    sel.innerHTML = "";
    for (const c of CROPS) {
      const opt = document.createElement("option");
      opt.value = c.id;
      opt.textContent = c.name;
      sel.appendChild(opt);
    }
// Apply preselect (from URL param) if present
const pre = sel.dataset.preselect;
if (pre) {
  const opt = Array.from(sel.options).find(o => o.value === pre);
  if (opt) sel.value = pre;
  delete sel.dataset.preselect;
}

  }

  initCropSelect();

// Auto-calculate if URL params provided
if (byId("lastFrost").value) {
  calculate();
}

  // ---- Main calculate ----
  function calculate() {
    byId("warnBox").style.display = "none";
    byId("resultsCard").style.display = "none";
    byId("resultsBody").innerHTML = "";
    byId("printBtn").style.display = "none";
    byId("copyLinkBtn").style.display = "none";

    const frost = toDate(byId("lastFrost").value);
    const protectionDays = parseInt(byId("protection").value, 10) || 0;
    const cropId = byId("crop").value;
    const crop = CROPS.find(c => c.id === cropId);

    if (!frost) {
      byId("warnBox").style.display = "block";
      byId("warnBox").innerHTML = "Please enter an average <strong>last frost date</strong> to calculate your windows.";
      return;
    }

    // Indoor start window (not shifted by protection)
    if (crop.indoorStartWeeks) {
      const [earlier, later] = crop.indoorStartWeeks;
      const [start, end] = windowFromWeeks(frost, earlier, later, 0);
      addRow("Start seeds indoors", `${fmt(start)} – ${fmt(end)}`, crop.notes);
    } else {
      addRow("Start seeds indoors", "Not typically recommended", crop.notes);
    }

    // Transplant window (shifted earlier by protection)
    if (crop.transplantWeeks) {
      const [earlier, later] = crop.transplantWeeks;
      const [start, end] = windowFromWeeksRelative(frost, earlier, later, protectionDays);
      const hardenStart = addDays(start, -10);
      const hardenEnd = addDays(start, -7);
      addRow("Begin hardening off", `${fmt(hardenStart)} – ${fmt(hardenEnd)}`, "Start gradual outdoor exposure ~7–10 days before transplanting.");
      addRow("Transplant outdoors", `${fmt(start)} – ${fmt(end)}`, protectionDays ? "Shifted earlier due to season protection." : "Open-garden timing.");
    } else {
      addRow("Transplant outdoors", "Not applicable", "");
    }

    // Direct sow window (shifted earlier by protection)
    if (crop.directSowWeeks) {
      const [earlier, later] = crop.directSowWeeks;
      const [start, end] = windowFromWeeksRelative(frost, earlier, later, protectionDays);
      addRow("Direct sow outdoors", `${fmt(start)} – ${fmt(end)}`, protectionDays ? "Shifted earlier due to season protection." : "");
    } else {
      addRow("Direct sow outdoors", "Not typical for this crop", "");
    }

    // Confidence note
    const frostNote = `Last frost date used: <strong>${fmt(frost)}</strong>.`;
    byId("warnBox").style.display = "block";
    byId("warnBox").innerHTML = frostNote + " If your site gets late frosts, consider choosing the later end of each window.";

    byId("resultsCard").style.display = "block";
    byId("printBtn").style.display = "inline-block";
    byId("copyLinkBtn").style.display = "inline-block";
    updateURLFromUI();
  }

  function resetForm() {
    byId("lastFrost").value = "";
    byId("protection").value = "0";
    byId("crop").selectedIndex = 0;
    byId("warnBox").style.display = "none";
    byId("resultsCard").style.display = "none";
    byId("resultsBody").innerHTML = "";
    byId("printBtn").style.display = "none";
    byId("copyLinkBtn").style.display = "none";
    window.history.replaceState({}, "", window.location.pathname);
  }

  function printResults() {
    window.print();
  }

  byId("calcBtn").addEventListener("click", calculate);
  byId("resetBtn").addEventListener("click", resetForm);
  byId("printBtn").addEventListener("click", printResults);
  byId("copyLinkBtn").addEventListener("click", copyShareLink);
</script>
