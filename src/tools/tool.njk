---
pagination:
  data: tools
  size: 1
  alias: tool
permalink: "/tools/{{ tool.slug }}/"
layout: layout-base.njk
tool: true

eleventyComputed:
  title: "{{ tool.name }} | GrowByDate"
  description: "{{ tool.description }}"
  canonical: "https://growbydate.com/tools/{{ tool.slug }}/"
---

<header class="header">
  <h1>{{ tool.name }}</h1>
  <p class="lede">{{ tool.description }}</p>
</header>

{% include "tools/" + tool.slug + ".njk" ignore missing %}

<section class="section">
  <p class="muted">Tool page placeholder.</p>
</section>
