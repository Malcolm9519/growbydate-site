<script>
  // ---- Data model ----
  // This tool reads crop timing from the site-wide crops dataset (dumped by Eleventy as JSON).
  // The key idea: all schedule windows are expressed as *weeks relative to your last frost date*.
  // - Indoor starts are typically weeks *before* last frost.
  // - Outdoor steps (transplant / direct sow) may be before or after last frost depending on crop tolerance.

  // ---- Helpers ----
  const byId = (id) => document.getElementById(id);

  // Site crop metadata (slug, etc.) from Eleventy data. Used for linking.
  const SITE_CROPS = (() => {
    try {
      const el = document.getElementById("siteCropsJson");
      if (!el) return [];
      return JSON.parse(el.textContent || "[]");
    } catch (e) {
      return [];
    }
  })();

  const SITE_CROPS_BY_ID = Object.create(null);
  for (const c of SITE_CROPS) {
    if (c && c.id) SITE_CROPS_BY_ID[c.id] = c;
  }

  const CROPS = SITE_CROPS
    .filter(c => c && c.id && Array.isArray(c.relatedTools) && c.relatedTools.includes("seed-start-planner"))
    .map(c => ({
      id: c.id,
      name: c.name,
      slug: c.slug,
      seasonType: c.seasonType,
      frostTolerance: c.frostTolerance,
      daysToMaturity: c.daysToMaturity,
      indoorStartWeeks: c.indoorStartWeeks,
      transplantWeeks: c.transplantWeeks,
      directSowWeeks: c.directSowWeeks,
      notes: c.description || c.tagline || ""
    }));

function cropIcon(id) {
  const icons = {
    tomatoes: "üçÖ",
    peppers: "ü´ë",
    cucumber: "ü•í",
    zucchini: "ü•í",      // no zucchini emoji; cucumber is closest
    beans: "ü´ò",
    lettuce: "ü•¨",
    spinach: "üçÉ",       // no spinach emoji; leafy greens works
    kale: "ü•¨",
    broccoli: "ü•¶",
    cabbage: "ü•¨"
  };

  return icons[id] || "üå±";
}


  function cropUrl(cropId) {
    const meta = SITE_CROPS_BY_ID[cropId];
    const slug = meta && meta.slug ? meta.slug : cropId;
    return `/crops/${slug}/`;
  }

  function toDate(inputValue) {
    if (!inputValue) return null;
    const [y, m, d] = inputValue.split("-").map(Number);
    return new Date(y, m - 1, d, 12, 0, 0, 0); // local noon to reduce DST weirdness
  }

  function fmt(date) {
    return date.toLocaleDateString(undefined, { year: "numeric", month: "short", day: "numeric" });
  }

  function addDays(date, days) {
    const out = new Date(date);
    out.setDate(out.getDate() + days);
    return out;
  }

  function weeksToDays(weeks) { return Math.round(weeks * 7); }

  function windowFromWeeksSigned(anchorDate, startWeeks, endWeeks, protectionDays) {
    const start = addDays(anchorDate, weeksToDays(startWeeks));
    const end   = addDays(anchorDate, weeksToDays(endWeeks));
    return [start, end].map(d => addDays(d, -protectionDays));
  }

  function normalizeOutdoorWeeks(crop, weeksPair) {
    if (!weeksPair) return null;
    let [a, b] = weeksPair;
    // For cool-season crops, many schedules are written as ‚ÄúX weeks before last frost‚Äù.
    // If the dataset provides positive numbers for a cool-season outdoor window, treat them as weeks *before* last frost.
    if (crop && crop.seasonType === "cool" && a >= 0 && b >= 0) {
      a = -a;
      b = -b;
    }
    return [a, b];
  }

  function indoorWindow(crop, frostDate) {
    if (!crop.indoorStartWeeks) return null;
    const [earlier, later] = crop.indoorStartWeeks;
    // Indoor starts are expressed as weeks BEFORE last frost.
    return windowFromWeeksSigned(frostDate, -earlier, -later, 0);
  }

  function outdoorWindow(crop, frostDate, weeksPair, protectionDays) {
    const norm = normalizeOutdoorWeeks(crop, weeksPair);
    if (!norm) return null;
    const [startW, endW] = norm;
    return windowFromWeeksSigned(frostDate, startW, endW, protectionDays);
  }

  function frostRiskLabel(crop) {
    const ft = (crop.frostTolerance || "").toLowerCase();
    if (ft.includes("none")) return "Tender (avoid frost)";
    if (ft.includes("hardy")) return "Hardy (handles multiple frosts)";
    if (ft.includes("light")) return "Light frost tolerant";
    return crop.seasonType === "warm" ? "Warm-season" : "Cool-season";
  }

  function frostRiskNote(crop) {
    const label = frostRiskLabel(crop);
    if (label.startsWith("Tender")) return "Freeze damage can occur at 32¬∞F (0¬∞C). Use the later end of outdoor windows unless nights are reliably warm.";
    if (label.startsWith("Hardy")) return "Can handle light frost, but hard freezes still damage plants. Use protection to reduce risk, not to ignore conditions.";
    if (label.startsWith("Light")) return "Usually tolerates light frost. A hard freeze can still damage.";
    return "Use the ranges as planning windows. Your actual timing should follow soil warmth and night temperatures.";
  }

  function harvestEstimateRow(crop, outdoorStartDate) {
    const dtm = crop.daysToMaturity;
    if (!outdoorStartDate || !Array.isArray(dtm) || dtm.length !== 2) return null;
    const [minDays, maxDays] = dtm;
    if (!Number.isFinite(minDays) || !Number.isFinite(maxDays)) return null;
    const earliest = addDays(outdoorStartDate, minDays);
    const latest = addDays(outdoorStartDate, maxDays);
    return `${fmt(earliest)} ‚Äì ${fmt(latest)}`;
  }

  function addRow(task, windowText, notes) {
    const tr = document.createElement("tr");
    tr.innerHTML = `
      <td><strong>${task}</strong></td>
      <td>${windowText}</td>
      <td class="muted">${notes || ""}</td>
    `;
    byId("resultsBody").appendChild(tr);
  }

  // ---- Init UI ----
function initCropSelect() {
  const sel = byId("crop");
  sel.innerHTML = "";

  // Sort crops alphabetically by name (without mutating original array)
  const sortedCrops = [...CROPS].sort((a, b) =>
    a.name.localeCompare(b.name, undefined, { sensitivity: "base" })
  );

  for (const c of sortedCrops) {
    const opt = document.createElement("option");
    opt.value = c.id;
    opt.textContent = c.name;
    sel.appendChild(opt);
  }
}

initCropSelect();

  // ---- Main calculate ----
  function calculate() {
    byId("warnBox").style.display = "none";
    byId("resultsCard").style.display = "none";
    byId("resultsBody").innerHTML = "";
    byId("printBtn").style.display = "none";
    byId("freezeReality").style.display = "none";

    const frost = toDate(byId("lastFrost").value);
    const protectionDays = parseInt(byId("protection").value, 10) || 0;
    const selected = [...byId("crop").selectedOptions].map(o => o.value);
    const selectedCrops = selected.map(id => CROPS.find(c => c.id === id)).filter(Boolean);

    if (!frost) {
      byId("warnBox").style.display = "block";
      byId("warnBox").innerHTML = "Please enter an average <strong>last frost date</strong> to calculate your windows.";
      return;
    }

    if (!selectedCrops.length) {
      byId("warnBox").style.display = "block";
      byId("warnBox").innerHTML = "Please select at least one <strong>crop</strong>.";
      return;
    }

    // Always show freeze reality at the top of results.
    const freezeBox = byId("freezeReality");
    freezeBox.style.display = "block";
    freezeBox.innerHTML = `<strong>Freeze reality:</strong> plant tissue can be damaged at <strong>32¬∞F / 0¬∞C</strong>. Use these ranges to plan, then confirm with night temperatures and your setup.`;

    for (const crop of selectedCrops) {
      // Crop header
      addRow(
        "Crop",
        `<a href="${cropUrl(crop.id)}">${crop.name}</a>`,
        `<span class="noteIcon" title="${crop.name}" aria-label="${crop.name} icon">${cropIcon(crop.id)}</span>`
      );

      addRow("Frost tolerance", frostRiskLabel(crop), frostRiskNote(crop));

      // Indoor start window (not shifted by protection)
      const indoor = indoorWindow(crop, frost);
      if (indoor) {
        const [start, end] = indoor;
        addRow("Start seeds indoors", `${fmt(start)} ‚Äì ${fmt(end)}`, crop.notes);
      } else {
        addRow("Start seeds indoors", "Not typically recommended", crop.notes);
      }

      // Transplant window (shifted earlier by protection)
      const transplant = outdoorWindow(crop, frost, crop.transplantWeeks, protectionDays);
      let outdoorAnchor = null;
      if (transplant) {
        const [start, end] = transplant;
        outdoorAnchor = start;
        const hardenStart = addDays(start, -10);
        const hardenEnd = addDays(start, -7);
        addRow("Begin hardening off", `${fmt(hardenStart)} ‚Äì ${fmt(hardenEnd)}`, "Start gradual outdoor exposure ~7‚Äì10 days before transplanting.");
        addRow("Transplant outdoors", `${fmt(start)} ‚Äì ${fmt(end)}`, protectionDays ? `Shifted earlier by ${protectionDays} day(s) due to protection.` : "Open-garden timing.");
      } else {
        addRow("Transplant outdoors", "Not applicable", "");
      }

      // Direct sow window (shifted earlier by protection)
      const direct = outdoorWindow(crop, frost, crop.directSowWeeks, protectionDays);
      if (direct) {
        const [start, end] = direct;
        // If there is no transplant step, use direct sow as the outdoor anchor for harvest estimates.
        if (!outdoorAnchor) outdoorAnchor = start;
        addRow("Direct sow outdoors", `${fmt(start)} ‚Äì ${fmt(end)}`, protectionDays ? `Shifted earlier by ${protectionDays} day(s) due to protection.` : "");
      } else {
        addRow("Direct sow outdoors", "Not typical for this crop", "");
      }

      // Harvest estimate (based on the first outdoor step)
      const harvest = harvestEstimateRow(crop, outdoorAnchor);
      if (harvest) {
        addRow("Estimated first harvest", harvest, "Based on typical days-to-maturity and the first outdoor planting step. Weather, variety, and temperature can shift this." );
      }
    }

    // Confidence note
    byId("resultsCard").style.display = "block";
    byId("printBtn").style.display = "inline-block";
  }

  function resetForm() {
    byId("lastFrost").value = "";
    byId("protection").value = "0";
    // Clear multi-select
    for (const opt of byId("crop").options) opt.selected = false;
    byId("warnBox").style.display = "none";
    byId("resultsCard").style.display = "none";
    byId("resultsBody").innerHTML = "";
    byId("printBtn").style.display = "none";
    byId("freezeReality").style.display = "none";
  }

  function printResults() {
    window.print();
  }

  byId("calcBtn").addEventListener("click", calculate);
  byId("resetBtn").addEventListener("click", resetForm);
  byId("printBtn").addEventListener("click", printResults);
</script>