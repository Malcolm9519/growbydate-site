<div class="brand">
  <h1>
    <a href="/" style="text-decoration:none; color:inherit;">
      GrowByDate
    </a>
  </h1>
  <p class="tagline">
    Practical planning tools for short growing seasons.
  </p>
</div>

<nav class="siteNav">

  <a href="/tools/seed-start-planner/" class="primaryLink">
    Seed Planner
  </a>

  <details class="navdrop">
    <summary>Tools</summary>
    <div class="navpanel">
      {% for t in tools | sort(attribute="order") %}
        <a href="/tools/{{ t.slug }}/">
          {{ t.name }}
        </a>
      {% endfor %}
    </div>
  </details>

  <details class="navdrop">
    <summary>Guides</summary>
    <div class="navpanel">
      {% for g in collections.guides %}
        <a href="{{ g.url }}">
          {{ g.data.title | stripSiteSuffix }}
        </a>
      {% endfor %}
    </div>
  </details>

  <a href="/crops/">
    Crops
  </a>

</nav>
