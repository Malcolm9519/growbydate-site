<div class="siteHeaderRow">
  <div class="brand">
    <h1>
      <a href="/" class="brandLink">
        <img src="/assets/img/GrowByDateLogo.png" alt="Grow By Date" class="brandLogo" width="220" height="60" loading="eager" decoding="async"/>
      </a>
    </h1>
    <p class="tagline sr-only">Practical planning tools for short growing seasons.</p>
  </div>

  {# Desktop nav (pills) #}
  <nav class="siteNav siteNavDesktop" aria-label="Primary">
    <a href="/tools/seed-start-planner/" class="primaryLink">üå±Spring Last Frost Planner</a>
    <a href="/tools/first-frost-planner/" class="primaryLink">üçÇFall First Frost Planner</a>
    <a href="/tools/frost-date-finder/" class="primaryLink">‚ùÑÔ∏èFrost Date Finder</a>

    <details class="navdrop">
      <summary>Tools</summary>
      <div class="navpanel">
        <a class="navall" href="/tools/">View all tools</a>
        <div class="navsep" aria-hidden="true"></div>
        {% for t in tools | sort(attribute="order") %}
          <a href="/tools/{{ t.slug }}/">{{ t.name }}</a>
        {% endfor %}
      </div>
    </details>

    <details class="navdrop">
      <summary>Guides</summary>
      <div class="navpanel">
        <a class="navall" href="/guides/">View all guides</a>
        <div class="navsep" aria-hidden="true"></div>
        {% for g in collections.guides %}
          <a href="{{ g.url }}">{{ g.data.title | stripSiteSuffix }}</a>
        {% endfor %}
      </div>
    </details>

    <details class="navdrop">
      <summary>Crops</summary>
      <div class="navpanel">
        <a class="navall" href="/crops/">View all crops</a>
        <div class="navsep" aria-hidden="true"></div>
        {% for c in crops | sort(attribute="name") %}
          <a href="/crops/{{ c.slug }}/">{{ c.name }}</a>
        {% endfor %}
      </div>
    </details>
  </nav>

  {# Mobile nav (hamburger) #}
  <nav class="siteNav siteNavMobile" aria-label="Primary">
    <details class="navdrop mobileMenu">
      <summary aria-label="Open menu">
        <span class="hamburger" aria-hidden="true"></span>
        Menu
      </summary>

      <div class="navpanel">
        <a href="/tools/">All tools</a>
        <a href="/guides/">All guides</a>
        <a href="/crops/">All crops</a>

        <div class="navsep" aria-hidden="true"></div>

        <p class="navlabel">Tools</p>
        {% for t in tools | sort(attribute="order") %}
          <a href="/tools/{{ t.slug }}/">{{ t.name }}</a>
        {% endfor %}

        <div class="navsep" aria-hidden="true"></div>

        <p class="navlabel">Guides</p>
        {% for g in collections.guides %}
          <a href="{{ g.url }}">{{ g.data.title | stripSiteSuffix }}</a>
        {% endfor %}

        <div class="navsep" aria-hidden="true"></div>

        <p class="navlabel">Crops</p>
        {% for c in crops | sort(attribute="name") %}
          <a href="/crops/{{ c.slug }}/">{{ c.name }}</a>
        {% endfor %}
      </div>
    </details>
  </nav>
</div>
