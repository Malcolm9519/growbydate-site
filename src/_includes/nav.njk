<header class="header">
  <div class="brand">
    <h1><a href="/" style="text-decoration:none;color:inherit;">{{ site.name }}</a></h1>
    <p class="tagline">Practical planning tools for short growing seasons.</p>
  </div>

  <nav class="actions" aria-label="Primary">
    {# Tools dropdown (only pages with tool: true) #}
    <details class="navdrop">
      <summary class="button subtle">Tools</summary>
      <div class="navpanel" role="menu" aria-label="Tools">
        <a role="menuitem" href="/tools/"><strong>All tools</strong></a>
        <hr />
        {%- set toolPages = collections.all | selectattr("data.tool") | sort(attribute="data.title") -%}
        {%- for p in toolPages -%}
          <a role="menuitem" href="{{ p.url }}">{{ p.data.title or p.fileSlug }}</a>
        {%- endfor -%}
      </div>
    </details>

    {# Crops dropdown (from crops.json) #}
    <details class="navdrop">
      <summary class="button subtle">Crops</summary>
      <div class="navpanel" role="menu" aria-label="Crops">
        <a role="menuitem" href="/crops/"><strong>All crops</strong></a>
        <hr />
        {%- for crop in crops | sort(attribute="name") -%}
          <a role="menuitem" href="/crops/{{ crop.slug }}/">{{ crop.name }}</a>
        {%- endfor -%}
      </div>
    </details>

    {# Guides dropdown (only pages with guide: true) #}
    <details class="navdrop">
      <summary class="button subtle">Guides</summary>
      <div class="navpanel" role="menu" aria-label="Guides">
        <a role="menuitem" href="/guides/"><strong>All guides</strong></a>
        <hr />
        {%- set guidePages = collections.all | selectattr("data.guide") | sort(attribute="data.title") -%}
        {%- for p in guidePages -%}
          <a role="menuitem" href="{{ p.url }}">{{ p.data.title or p.fileSlug }}</a>
        {%- endfor -%}
      </div>
    </details>
  </nav>
</header>
